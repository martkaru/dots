[alias]
 sta = status
 ci = commit[user]
 name = Mart Karu
 co = checkout
 st = !git --no-pager status
 lc = log ORIG_HEAD.. --stat --no-merges
 review = log ORIG_HEAD.. --stat -b -p --reverse
 view = log --stat -b -p --reverse
 edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; mate `f`"
 add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
 edit-untracked = "!f() { git ls-files --others --directory --no-empty-directory --exclude-standard | sort -u ; }; mate `f`"
 add-untracked = "!f() { git ls-files --others --directory --no-empty-directory --exclude-standard | sort -u ; }; git add `f`" 

[user]
 email = karu@metal.ee
 name = Mart Karu
[color]
 branch = auto
 diff = auto
 status = auto

[color "branch"]
 current = yellow reverse
 local = yellow
 remote = green

[color "diff"]
 meta = yellow bold
 frag = magenta bold
 old = red bold
 new = green bold

[color "status"]
 added = yellow
 changed = green
 untracked = cyan
