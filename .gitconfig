[alias]
  sta = status
  ci = commit[user]
  name = Mart Karu
  co = checkout
  st = !git --no-pager status
  lc = log ORIG_HEAD.. --stat --no-merges
  review = log ORIG_HEAD.. --stat -b -p --reverse
  view = log --stat -b -p --reverse
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --

[user]
  email = karu@metal.ee
  name = Mart Karu

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta bold
  old = red bold
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
